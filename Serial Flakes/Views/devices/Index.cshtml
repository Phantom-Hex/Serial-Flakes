@model IEnumerable<Serial_Flakes.Models.device>

@{
    ViewBag.Title = "Index";
}

<h2>Device Listing</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Serial Number
        </th>
        <th>
            SKU
        </th>
        <th>
            Notes
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.device_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.device_code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.device_SKU)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.device_description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
