@model Serial_Flakes.Models.device

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this? 
    This cannot be undone!</h3>
<div>
    <h4>device</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.device_name)
        </dd>

        <dt>
            Serial Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.device_code)
        </dd>

        <dt>
            SKU
        </dt>

        <dd>
            @Html.DisplayFor(model => model.device_SKU)
        </dd>

        <dt>
            Description/Notes
        </dt>

        <dd>
            @Html.DisplayFor(model => model.device_description)
        </dd>

        <dt>
            Photo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.device_pic)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
