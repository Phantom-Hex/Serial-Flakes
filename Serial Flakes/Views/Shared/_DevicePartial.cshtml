@using Microsoft.AspNet.Identity

@model List<Serial_Flakes.Models.device>

@if (Request.IsAuthenticated)
{
    @Html.AntiForgeryToken()
    <div class="table-title">
        <p>
            <h2>Recently added devices</h2>
            </p>
                <table class="table">
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Serial Number
                        </th>
                        <th>
                            SKU
                        </th>
                        <th>
                            Notes
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.device_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.device_code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.device_SKU)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.device_description)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.id })
                            </td>
                        </tr>
                    }
                </table>
        </div>
}

else
{
    
}
